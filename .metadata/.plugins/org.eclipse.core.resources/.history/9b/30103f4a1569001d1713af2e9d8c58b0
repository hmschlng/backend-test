<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.backtest.house.model.mapper.HouseMapper">


	<!-- Methods -->
	
	<select id="selectSidoList" resultMap="sidoCode">
		select left(sidoCode,2) sidoCode, sidoName
		from sidocode
		order by sidoCode
	</select>
	
	<select id="selectGugunList" parameterType="string" resultMap="gugunCode">
		select left(gugunCode,5) gugunCode, gugunName
		from guguncode
		where left(gugunCode,2) = #{sidoCode}
		order by gugunCode
	</select>
	
	<select id="selectDongList" parameterType="string" resultMap="dongCode">
		select dongCode, dongName
		from dongcode
		where left(dongCode,5) = #{gugunCode}
		order by dongCode
	</select>

	<!-- getAptList -->
	<select id="selectApt" parameterType="map" resultMap="aptDto">
		select *
		from houseinfo hi left join housedeal hd
		on hi.aptCode = hd.aptCode
		where hi.dongCode = #{code}
		and hd.dealYear = #{year}
		and hd.dealMonth = #{month}
	</select>

</mapper>