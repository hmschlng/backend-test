<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.backtest.house.model.mapper.HouseMapper">

	<select id="selectSidoList" resultType="areaCode">
		select left(sidoCode,2) sidoCode as code, sidoName as name
		from sidocode
		order by sidoCode
	</select>
	
	<select id="selectGugunList" parameterType="string" resultType="areaCode">
		select left(gugunCode,5) gugunCode as code, gugunName as name
		from guguncode
		where left(gugunCode,2) = #{sidoCode}
		order by gugunCode
	</select>
	
	<select id="selectDongList" parameterType="string" resultType="areaCode">
		select dongCode as code, dongName as name
		from dongcode
		where left(dongCode,5) = #{gugunCode}
		order by dongCode
	</select>

	<!-- getAptList -->
	<select id="selectApt" parameterType="map" resultMap="aptDto">
		select *
		from houseinfo hi left join housedeal hd
		on hi.aptCode = hd.aptCode
		where hi.dongCode = #{code}
		and hd.dealYear = #{year}
		and hd.dealMonth = #{month}
	</select>

</mapper>